<style>
    *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    section{
        background-image: url("https://www.10wallpaper.com/wallpaper/1920x1080/1405/Farm_vast_landscape-Landscape_HD_Wallpaper_1920x1080.jpg");
        background-position: center;
        background-size: cover;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 93vh;
        padding: 10px;
        width: 100%;
    }
    .container{
        position: relative;
        width: 100%;
        max-width: 1000px;
        padding: 30px;
        background: rgba(255,255,255,0.3);
        box-shadow: 20px 20px 50px rgba(0,0,0,0.7);
        border: 1px solid rgba(255,255,255,0.4);
        border-bottom: 1px solid rgba(255,255,255,0.1);
        border-right: 1px solid rgba(255,255,255,0.1);
        border-radius: 10px;
        overflow: hidden;
        backdrop-filter: blur(25px);
    }
    .container:before{
        content: '';
        position: absolute;
        top: 0;
        left: -40%;
        width: 100%;
        height: 100%;
        background: rgba(255,255,255,0.1);
        pointer-events: none;
        transform: skewX(-15deg);
    }
    .container h3{
        font-weight: bold;
        width: 100%;
        text-align: center;
        color: #fff;
    }
    .container .row100{
        position: relative;
        width: 100%;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px 1fr));
    }
    .container .row100 .col{
        position: relative;
        width: 100%;
        padding: 0 10px;
        margin: 20px 0 20px;
    }
    .container .row100 .col .inputBox{
        position: relative;
        width: 100%;
        height: 40px;
        color: #fff;
    }
    .container .row100 .col .inputBox input,
    .container .row100 .col .inputBox textarea{
        position: absolute;
        width: 100%;
        height: 100%;
        background: transparent;
        box-shadow: none;
        border: none;
        outline: none;
        font-size: 15px;
        padding: 0 10px;
        color: #000;
        z-index: 99;
    }
    .container .row100 .col .inputBox .text{
        position: absolute;
        top: 0;
        left: 0;
        line-height: 40px;
        font-size: 18px;
        padding: 0 10px;
        display: block;
        transition: 0.2s;
        pointer-events: none;
    }
    .container .row100 .col .inputBox input:focus + .text,
    .container .row100 .col .inputBox input:valid + .text
    .container .row100 .col .inputBox textarea:focus + .text,
    .container .row100 .col .inputBox textarea:valid + .text{
        top: -35px;
        left: -10px;
    }
    .container .row100 .col .inputBox .line{
        position: absolute;
        bottom: 0;
        display: block;
        width: 100%;
        height: 2px;
        background: #fff;
        transition: 0.2s;
        border-radius: 2px;
        pointer-events: none;
    }
    .container .row100 .col .inputBox input:focus ~ .line,
    .container .row100 .col .inputBox input:valid ~ .line{
        height: 100%;
    }
    .container .row100 .col .inputBox textarea:focus ~ .line,
    .container .row100 .col .inputBox textarea:valid ~ .line{
        height: 100%;
    }
    .container .row100 .col .inputBox input[type="submit"]{
        border: none;
        padding: 10px;
        cursor: pointer;
        outline: none;
        background: rgb(19, 112, 0);
        color:#fff;
        font-size: 18px;
        width: 170px;
        margin: auto;
        border-radius: 5px;
    }
    .container .row100 .col .inputBox input[type="submit"]:hover{
        background: rgb(15, 92, 0);
    }
    .container .row100 .col .inputBox input[type="submit"]:active{
        background: rgb(13, 75, 0);
    }
</style>


<section>

    <div class="container">
        <h3>Contactanos y haz tu pedido!</h3>

        <div class="row100">
            
            <div class="col">
                <div class="inputBox">
                    <input type="text" name="" required="required">
                    <span class="text">Nombres</span>
                    <span class="line"></span>
                </div>
            </div>

            <div class="col">
                <div class="inputBox">
                    <input type="text" name="" required="required">
                    <span class="text">Apellidos</span>
                    <span class="line"></span>
                </div>
            </div>
            
            <div class="col">
                <div class="inputBox">
                    <input type="text" name="" required="required">
                    <span class="text">Correo</span>
                    <span class="line"></span>
                </div>
            </div>

            <div class="col">
                <div class="inputBox">
                    <input type="text" name="" required="required">
                    <span class="text">Telefono</span>
                    <span class="line"></span>
                </div>
            </div>

        </div>

        <div class="row100">

            <div class="col">
                <div class="inputBox textarea">
                    <textarea name="" id="" cols="30" rows="10" required="required"></textarea>
                    <span class="text">Escribe tu mensaje!</span>
                    <span class="line"></span>
                </div>
            </div>

        </div>

        <div class="row100">

            <div class="col">
                <div class="inputBox textarea">
                    <input type="submit" value="Enviar mensaje">
                </div>
            </div>

        </div>
    </div>

</section>